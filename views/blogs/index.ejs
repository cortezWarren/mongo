<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head'); %>
<body>
    <div class="blogs">
        <h2>All Blogs</h2>
        <div>
            <form action="/blogs/search" method="post">
                <label for="search">Search</label>
                <input type="search" name="search" id="search">
                <input type="submit" value="search">
            </form>
        </div>
        <ul>
        <% if (blogs.length > 0) {%>
            <% blogs.forEach(blog => {%>
                <li>
                    <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                </li>
            <%});%>
            <% } else{ %>
                <p>No blogs to display</p>
        <% } %>
        </ul>

        <div>
            <form action="/blogs/create" method="post">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" autocomplete="off"><br>

                <label for="snippet">Snippet</label>
                <input type="text" id="snippet" name="snippet" autocomplete="off"><br>

                <label for="body">Body</label>
                <textarea name="body" id="body" cols="30" rows="10"></textarea>
                <input type="submit" value="save">
            </form>
        </div>
    </div>
</body>
<script>
    
</script>
</html>