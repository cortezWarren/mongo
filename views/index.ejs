<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>
<body>
    <div class="blogs">
        <h2>All Blogs</h2>
        <ul>
        <% if (blogs.length > 0) {%>
            <% blogs.forEach(blog => {%>
                <li>
                    <a href="/singleid/<%= blog._id %>"><%= blog.title %></a>
                </li>
            <%});%>
            <% } else{ %>
                <p>No blogs to display</p>
        <% } %>
        </ul>
    </div>
</body>
